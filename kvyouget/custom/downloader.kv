#:import DownloadButtonBar custom.buttons
#:import HSeparator custom.separator
<Downloader>:
    id: dl
    orientation: 'vertical'
    spacing: 10
    canvas.before:
        Color:
            rgb: app.colors['Dark']
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        canvas:
            Color:
                rgb: app.colors['Dark']
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, 2
    HSeparator:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        Label:
            text: dl.url_prefix + "\n..."
            size_hint: 1, 1
            halign: 'center'
            valign: 'center'
            text_size: self.size
        TextInput:
            id: url_input
            text: "test"
            multiline: False
            size_hint: 1, 1
            font_size: 30
    HSeparator:
    BoxLayout:
        canvas:
            Color:
                rgb: app.colors['Dark']
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, 2
    DownloadButtonBar:
        size_hint: 1, 0.5
        input_element: url_input




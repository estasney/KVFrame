<DownloadOptionsContainer>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        Label:
            text: "Loaded"
            size_hint: 1, 1
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 24

<ITagListItem>:
    padding: [5, 5, 5, 5]
    canvas:
        Color:
            rgba: 1, 1, 1, 0.8
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
    cols: 2
    BoxLayout:
        size_hint_x: 0.8
        orientation: 'vertical'
        Label:
            text: f".{root.container} {root.quality}"
            mipmap: True
            font_size: 36
            text_size: self.size
            valign: 'middle'
            halign: 'center'
        Label:
            text: f"{root.itag_size} {root.itag_xy}"
            mipmap: True
            font_size: 24
            text_size: self.size
            valign: 'middle'
            halign: 'center'
    Button:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2
                points: [(self.x + self.width * 0.75), (self.y + self.height * 0.65), (self.x + self.width * 0.90), (self.y + self.height * 0.5), (self.x + self.width * 0.75), (self.y + self.height * 0.35)]
        background_color: [*app.colors['Dark'], 1]
        background_normal: ''
        opacity: 1 if self.state == 'normal' else 0.6
        size_hint_x: 0.2
        text: str(root.itag_id)
        mipmap: True
        on_release: app.select_itag(root.itag_id)


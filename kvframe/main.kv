#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import ActionSeparator kivy.uix.actionbar.ActionSeparator

ScreenManagement:
    transition: FadeTransition()
    SplashScreen:
    MainScreen:

<MainScreen>:
    name: 'main'
    ScreenNav:
    BoxLayout:
        orientation: 'vertical'
        StatusBar:

<StatusComponent>:
    size: self.size
    pos: self.pos
    orientation: 'horizontal'




<StatusBar>:
    canvas.before:
        Color:
            rgb: (0.996, 0.259, 0.059)
    rows: 1
    orientation: 'horizontal'
    size: self.pos
    pos: self.pos
    StatusComponent:
        size_hint_x: 0.2
        Label:
            text: "Scraper"
            font_size: 20
        Label:
            text: "Online"
            font_size: 20




<ScreenNav>:
    ActionBar:
        pos_hint: {'top': 1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'SoftwareApp'
                with_previous: True
            ActionOverflow:
            ActionGroup:
                ActionButton:
                    text: 'New'
                ActionButton:
                    text: 'Load'

<Holder>:
    AnchorLayout:
        anchor_x: 'center'
        size: self.size
        pos: self.pos

        FloatLayout:

            Label:
                text: "Holder"

                halign: 'center'
                pos_hint: {'center_x': 0.5, 'top': 0.45}
                size_hint: 0.3, 0.3

<RoundedButton>:
    canvas.before:
        Color:
            rgb: (0.996, 0.259, 0.059)
        RoundedRectangle:
            pos: self.pos
            size: self.size



<WelcomeButton>:
    on_release: app.root.current = 'main'
    text: 'Begin'
    font_size: 18


<SplashScreen>:
    name: 'splash'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: (0.063, 0.478, 0.69)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: 'center'
        size: self.size
        pos: self.pos

        FloatLayout:

            Image:
                source: root.icon_path
                size_hint: 0.4, 0.4
                pos_hint: {'center_x': 0.5, 'top': 0.95}

            WelcomeButton:
                size_hint: 0.1, 0.1
                pos_hint: {'center_x': 0.5, 'top': 0.5}

            Label:
                text: "[size=40]SoftwareApp[/size]\nV1"
                markup: True
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'top': 0.45}
                size_hint: 0.3, 0.3
                color: 0.09, 0.129, 0.129, 1















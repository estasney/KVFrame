    NoteCategoryChooserScreen:
        manager: screen_manager
        id: chooser_screen
        name: 'chooser_screen'
    NoteCategoryScreen:
        id: note_screen1
        name: 'note_screen1'

    NoteCategoryScreen:
        id: note_screen2

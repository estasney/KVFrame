<ContentCode>:
    id: parent
    CodeInput:
        background_color: [0,0,0,1]
        size_hint: 0.99, 0.95
        anchor_x: "center"
        anchor_y: "center"
        text: parent.note_text
        readonly: True
        style_name: "paraiso-dark"
        lexer: parent.code_lexer
        use_bubble: False
        use_handles: False
        on_touch_up: self.cancel_selection()

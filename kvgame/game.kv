<KeyIcon>:
    source: self.src_normal
    pos: self.pos
    size: self.size
    on_press: app.sound(key="KeyIcon_ignition", callback=self.callback, global_toggle=True)

<StopIcon>:
    source: self.src_normal
    pos: self.pos
    size: self.size
    on_press: self.callback()

<GoIcon>
    source: self.src_normal
    pos: self.pos
    size: self.size
    on_press: self.callback()


<IconHolder>:


IconHolder:
    Image:
        source: app.get_path("resources/images/dump_truck_front.png")

        size_hint: 0.5, 0.5
    KeyIcon:
        pos_hint: {'x': 0.7, 'top': 0.4}
        size_hint: 0.2, 0.2
    SpeedSlider:
        pos_hint: {'x': 0.5, 'top': 0.9}
        size_hint: 0.4, 0.4
        orientation: 'vertical'
        cursor_height: 48
        cursor_width: 400
        cursor_image: self.cursor_src
        on_touch_move: self.callback()

<KeyIcon>:
    source: self.src_normal
    pos: self.pos
    size: self.size
    on_press: app.sound(key="KeyIcon_ignition", callback=self.callback, global_toggle=True)

<StopIcon>:
    source: self.src_normal
    pos: self.pos
    size: self.size
    on_press: self.callback()

<GoIcon>
    source: self.src_normal
    pos: self.pos
    size: self.size
    on_press: self.callback()


<IconHolder>:
    orientation: 'horizontal'
    rows: 2
    cols: 3
    spacing: 10
    padding:20

IconHolder:
    KeyIcon:
        pos_hint: {'x': 0.7, 'top': 0.5}
        size_hint: 0.3, 0.3
    SpeedSlider:
        pos_hint: {'x': 0.4, 'top': 0.5}
        size_hint: 0.3, 0.4
        orientation: 'vertical'
        cursor_height: 48
        cursor_width: 400
        cursor_image: self.cursor_src
        on_touch_move: self.callback()

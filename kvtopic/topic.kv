#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import ActionSeparator kivy.uix.actionbar.ActionSeparator
#:import Factory kivy.factory.Factory
#:import hex kivy.utils.get_color_from_hex

<ScreenManagement>:
    id: screen_manager
    transition: FadeTransition()
    OptionsScreen:
    SplashScreen:
    DocumentScreen:


<OptionsScreen>:
    name: 'options'
    canvas.before:
        Color:
            rgba: (.8, 0.8, 0.8, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        StatusBar:
            size_hint: 1, 0.05
            pos_hint: {'top': 1}
        Filters:
            size_hint: 1, 0.8

<Filters@BoxLayout>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        padding: 15
        spacing: 5
        size_hint: 1, 0.1
        Spinner:
            id: input_job_family
            text: "All Job Families"
            values: app.job_families
            size_hint: 0.5, 1
            on_text: app.values_filter(value=self.text, input_id='input_job_family')

        Spinner:
            id: input_job_title
            text: "All Job Titles"
            values: app.job_titles
            size_hint: 0.5, 1
            on_text: app.values_filter(value=self.text, input_id='input_job_title')

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        spacing: 20
        padding: 15
        Spinner:
            id: input_topic_name
            text: "All Topics"
            values: app.topic_names
            size_hint: 0.5, 1
            on_text: app.values_filter(value=self.text, input_id='input_topic_name')
    HSeparator:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.2
        spacing: 5
        padding: 15
        TextInput:
            id: input_word_search
            hint_text: "Filter by word(s). Separate words with commas: word, phrase phrase, word"
            size_hint: 0.5, 1
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.05
        spacing: 5
        padding: 2
        Label:
            text: "Match ALL Words" if input_word_boolean.active else "Match ANY Word"
            color: (0, 0, 0, 1)
        Switch:
            id: input_word_boolean
            disabled: False
            active: True
    HSeparator:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        ColoredButton:

            on_release: app.set_filters(reset=True)
            on_release: input_job_family.text = "All Job Families"
            on_release: input_job_title.text = "All Job Titles"
            on_release: input_topic_name.text = "All Topics"
            on_release: input_word_boolean.active = True
            on_release: input_word_search.text = ""
            text: 'Reset'
            size_hint: 0.1, 1

        GreenDarkColoredButton:
            on_release: app.set_filters(job_family=input_job_family.text, job_title=input_job_title.text, topic=input_topic_name.text, word_search=input_word_search.text, word_boolean=input_word_boolean.active, callback=app.show_documents)
            text: 'Apply and View'
            size_hint: 0.1, 1


<DocumentScreen>:
    name: 'documents'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (0.95, 0.95, 0.95, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    DocumentBar:
        size_hint: 1, 0.1
        pos_hint: {'top': 1}
    BoxLayout:

        size_hint: 1, 0.9
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            Label:
                text:app.current_document_text + "\n" * 10
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, self.width
                markup:True
                padding: 5, 10
                color: (0, 0, 0, 1)

    BoxLayout:
        size_hint: 1, 0.1
        orientation: 'horizontal'

        ColoredButton:
            id: prev_doc
            disabled: False if app.current_document_previous_enabled else True
            text: "Previous"
            on_release: app.paginate(kind='reverse', n=1)
        RedDarkColoredButton:
            id: exit_doc
            text: "Quit"
            on_release: app.show_options()
        ColoredButton:
            id: next_doc
            disabled: False if app.current_document_next_enabled else True
            text: "Next"
            on_release: app.paginate(kind='advance', n=1)


<DocumentBar>:
    canvas.before:
        Color:
            rgb: (0.3, 0.3, 0.3)
        Rectangle:
            pos: self.pos
            size: self.size
    rows: 1
    orientation: 'horizontal'
    size: self.pos
    pos: self.pos
    StatusComponent:
        id: s1
        size_hint_x: 0.2
        Label:
            text: app.current_document_title
            markup: True
            text_size: s1.width, None
            size: self.texture_size
            halign: 'center'
    VSeparator:
    StatusComponent:
        id: s2
        size_hint_x: 0.2
        Label:
            text: app.current_document_topics
            markup: True
            text_size: s2.width, None
            size: self.texture_size
            halign: 'center'


<SplashScreen>:
    name: 'splash'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: (0.063, 0.478, 0.69)
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: 'center'
        size: self.size
        pos: self.pos

        FloatLayout:

            Image:
                source: app.APP_ICON_PATH
                size_hint: 0.4, 0.4
                pos_hint: {'center_x': 0.5, 'top': 0.95}

            RedRoundedButton:
                on_release: app.root.current = 'document'
                text: 'Begin'
                size_hint: 0.1, 0.1
                pos_hint: {'center_x': 0.5, 'top': 0.5}

            Label:
                text: "[size=40]{}[/size]\n{}".format(app.APP_NAME, app.APP_VERSION)
                markup: True
                halign: 'center'
                pos_hint: {'center_x': 0.5, 'top': 0.45}
                size_hint: 0.3, 0.3
                color: 0.09, 0.129, 0.129, 1


<Separator@Widget>:
    canvas:
        Color:
            rgba: 0.365, 0.365, 0.365, 1
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: dp(2)

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(2)
<StatusComponent@BoxLayout>:
    size: self.size
    pos: self.pos
    orientation: 'horizontal'
<StatusBar>:
    canvas.before:
        Color:
            rgb: (0.1, 0.1, 0.1)
        Rectangle:
            pos: self.pos
            size: self.size
    rows: 1
    orientation: 'horizontal'
    size: self.pos
    pos: self.pos
    StatusComponent:
        size_hint_x: 0.2
        Label:
            text: "Documents: [color={}]{}[/color]".format(app.GREEN_TEXT, app.n_docs)
            markup: True
            font_size: 20
    VSeparator:
    StatusComponent:
        size_hint_x: 0.2
        Label:
            text: "Unique Topics: [color={}]{}[/color]".format(app.GREEN_TEXT, app.n_topic_names)
            markup: True
            font_size: 20
    VSeparator:
    StatusComponent:
        size_hint_x: 0.2
        Label:
            text: "Topics: [color={}]{}[/color]".format(app.GREEN_TEXT, app.n_topics)
            markup: True
            font_size: 20









